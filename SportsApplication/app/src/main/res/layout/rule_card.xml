<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tittle_rule"
                android:text="This is the sport new"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descp"
                android:layout_marginTop="5dp"
                android:text="This is the rule for learning batting"
                android:layout_below="@+id/tittle_rule"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/download_button"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@drawable/download_button_background"
                android:src="@drawable/ic_action_name"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descp"
                android:text="Created by: "
                android:id="@+id/by"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Date"
                android:text="Date"
                android:layout_alignParentRight="true"
                android:layout_below="@id/descp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                />




        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>